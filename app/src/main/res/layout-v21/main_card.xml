<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_card_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:baselineAligned="false"
            android:divider="@drawable/divider"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:showDividers="beginning">

                <RelativeLayout
                    android:id="@+id/rl_text"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="16sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="5sp"
                    android:layout_weight="10">

                    <TextView
                        android:id="@+id/text_main_carddate"
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        android:text="Sun Jan 22"
                        android:textColor="@color/colorAccent"
                        android:gravity="center_vertical"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_below="@id/text_main_carddate"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50sp">

                        <ImageButton
                            android:id="@+id/img_main_card_star_button"
                            android:src="@drawable/ic_action_star_outline_grey600"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:layout_gravity="center"
                            android:layout_width="42sp"
                            android:layout_height="42sp"
                            android:padding="4sp"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/text_main_cardtext"
                            android:gravity="center_vertical|start"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:lineSpacingMultiplier="1.3"
                            android:text="hello, this is a text test aaaaaaaadac \n dawdasddddsadwaf fefwada wddwdafa awd"
                            android:textSize="16sp"
                            android:textColor="@color/secondary_text_default_material_light"
                            android:layout_height="50sp"
                            android:layout_width="match_parent" />
                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_gravity="top"
                    android:layout_margin="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_main_cardtime"
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:text="13:23"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp" />

                    <ImageButton
                        android:id="@+id/imgb_main_card_copy_button"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_marginTop="2sp"
                        android:src="@drawable/ic_notification_action_copy"
                        android:layout_below="@id/text_main_cardtime"
                        android:layout_gravity="center"
                        android:layout_width="38sp"
                        android:layout_height="38sp"
                        android:padding="8sp"
                        android:scaleType="fitCenter" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:text="Copied from Telegram"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:textSize="10sp"
                android:layout_below="@id/rl_text"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>




    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/ll_card_parent"
        android:background="@color/divider" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/ll_card_parent"
        android:background="@color/divider" />

</RelativeLayout>
